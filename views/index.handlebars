<div class="container">
    
    <div class="card-deck">
        <!--where the articles wil populate-->
        <div class="row">

            {{#each articles}}
            <div class="col-md-4" id="articleCard">
                <div class="card">
                    <img class="card-img-top" class="img-responsive" src="{{this.image}}">
                    <div class="card-block">
                        <h4 class="card-title">{{this.title}}</h4>
                        <p class="card-text">{{this.summary}}</p>
                        <a class="btn btn-info" href="{{this.link}}" id="linkButton">Full Article</a>
                        <button id="commentButton" class="btn btn-info" data-toggle="modal" data-target="#comments" data_id="{{this._id}}">Comments</button>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>




<!--modal confirming you have scrape articles-->
<div class="modal" id="confirmScrape" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Scrape Complete!</h4>
            </div>
            <div class="modal-body">
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="dispalyArticles" href="/all" value="Refresh Page" onClick="window.location.reload()">View Articles</button>
            </div>
        </div>
    </div>
</div>
<!--modal to add comments-->
<div class="modal" id="comments" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" id="currentArticleTitle">


            </div>

            <div class="modal-body">
                <div id="previousNote">
                    <!--Where previous comment be display-->
                </div>
                <div class="form-group">
                    <label for="exampleTextarea">Add your comment in the box below. Click on an existing comment to delete it.</label>
                    <textarea class="form-control" id="userComment" rows="5"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" data-dismiss="modal" id="saveNote" data_id= "">Submit Comment</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
